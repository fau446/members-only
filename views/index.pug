extends layout

block content
  h1= title
  p Welcome to Members Only!

  if post_list.length 
    ul 
      each post in post_list 
        li 
          p #{post.date}
          if user 
            p Posted by: #{post.user.name}
          else 
            p Posted by: Anonymous
          p #{post.message}
  else
    p There are no posts.

  if user 
    p You are logged in! 
  else 
    p You are not logged in!